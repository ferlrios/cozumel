@page
@model IndexModel
@{
    ViewData["Title"] = "Tu perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">


        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.InstagramURL"></label>
                <input asp-for="Input.InstagramURL" class="form-control" />
                <span asp-validation-for="Input.InstagramURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SpotifyURL"></label>
                <input asp-for="Input.SpotifyURL" class="form-control" />
                <span asp-validation-for="Input.SpotifyURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.YoutubeURL"></label>
                <input asp-for="Input.YoutubeURL" class="form-control" />
                <span asp-validation-for="Input.YoutubeURL" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary button-small mt-3">Guardar cambios</button>
        </div>

        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row text-center">
                    <div class="col-12 mx-auto my-3">
                        <!--<label asp-for="Input.ProfileImg" style="width: 100%;"></label>-->
                        @if (Model.Input.ProfileImg != null)
                        {
                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover;" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfileImg))">
                        }
                        else
                        {
                            <img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="~/img/profileDefault.jpg">
                        }
                    </div>
                    <div class="col-12 mx-auto">
                        <label for="file-upload" class="btn btn-outline-primary custom-file-upload" style="border-radius: 5%; ">
                            Actualizar foto
                            <i class="fas fa-arrow-circle-up" style="font-size:1em;"></i>
                        </label>
                        <input type="file"
                               id="file-upload"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="Input.ProfileImg"
                               class="form-control btn-primary btn"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.ProfileImg" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}