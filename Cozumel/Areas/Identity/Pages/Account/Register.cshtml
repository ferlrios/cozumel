@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 col-12">
        @if (Model.Role == "1")
        {
            <form asp-route-returnUrl="@Model.ReturnUrl" asp-route-role="@Model.Role" method="post">
                <h4>Crear una nueva cuenta.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Registrarse</button>
            </form>
        }
            @if (Model.Role == "2")
            {
                <form asp-route-returnUrl="@Model.ReturnUrl" asp-route-role="@Model.Role" method="post">
                    <h4>Crear una nueva cuenta.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" class="form-control" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.InstagramURL"></label>
                        <input asp-for="Input.InstagramURL" class="form-control" />
                        <span asp-validation-for="Input.InstagramURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.SpotifyURL"></label>
                        <input asp-for="Input.SpotifyURL" class="form-control" />
                        <span asp-validation-for="Input.SpotifyURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.YoutubeURL"></label>
                        <input asp-for="Input.YoutubeURL" class="form-control" />
                        <span asp-validation-for="Input.YoutubeURL" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                </form>
            }

        </div>
    <div class="col-md-8 col-12 col-md-offset-2">
        <section class="d-flex justify-content-center">
            <h4 class="text-center mt-5">Enterate de todo lo que está sonando en Mardel</h4>
            <div class="cozumel-register"><img class="cozumel-register" src="~/img/Cozumel.png" alt="Logo de Cozumel" /></div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
